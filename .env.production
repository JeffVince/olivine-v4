# API Configuration
VITE_API_URL=https://olivine-v4.vercel.app
VITE_WS_URL=wss://olivine-v4.vercel.app

# Astra DB Configuration
# IMPORTANT: These values should be set through Vercel environment variables
# and not committed to the repository
VITE_ASTRA_DB_ID=
VITE_ASTRA_DB_REGION=
VITE_ASTRA_DB_KEYSPACE=

# Astra Streaming Configuration
VITE_ASTRA_STREAMING_TENANT=default
VITE_ASTRA_STREAMING_NAMESPACE=default

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_TEMPLATES=true

# Security
VITE_MAX_FILE_SIZE=5242880 # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx,.txt

# App configuration
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=Olivine V4

# Logging configuration
VITE_LOG_LEVEL=info

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Add more environment variables as needed

# These variables are exposed to the client (frontend)
# Sensitive data should NOT be included here 